# Vite Environment Variables Example
# Copy this file to .env.local and update with your actual values

# API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_API_TIMEOUT=10000

# Environment
VITE_NODE_ENV=development
VITE_APP_NAME=Escrow Service Platform
VITE_APP_VERSION=1.0.0

# PayFast Configuration
VITE_PAYFAST_MERCHANT_ID=your-payfast-merchant-id
VITE_PAYFAST_MERCHANT_KEY=your-payfast-merchant-key
VITE_PAYFAST_SANDBOX=true
VITE_PAYFAST_SANDBOX_URL=https://sandbox.payfast.co.za/eng/process
VITE_PAYFAST_LIVE_URL=https://www.payfast.co.za/eng/process

# Features
VITE_ENABLE_2FA=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MAINTENANCE_MODE=false

# WebSocket Configuration
VITE_WS_URL=ws://localhost:5000
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png
VITE_UPLOAD_URL=http://localhost:5000/api/uploads

# External Services
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-key
VITE_SENTRY_DSN=your-sentry-dsn

# Debug and Development
VITE_DEBUG_MODE=false
VITE_SHOW_DEBUG_INFO=false
VITE_LOG_LEVEL=info

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_PRIMARY_COLOR=#1976d2
VITE_SECONDARY_COLOR=#dc004e

# Pagination and Data Loading
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Security
VITE_ENABLE_CSP=true
VITE_SESSION_TIMEOUT=1800000

# Social Login (if implemented)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_FACEBOOK_APP_ID=your-facebook-app-id

# Company Information
VITE_COMPANY_NAME=Escrow Service Platform
VITE_COMPANY_EMAIL=support@escrowservice.com
VITE_COMPANY_PHONE=+27-xx-xxx-xxxx
VITE_COMPANY_ADDRESS=Your Company Address
