# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=escrow_service
DB_USER=escrow_user
DB_PASSWORD=escrow_password
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRES_IN=7d

# PayFast Configuration
PAYFAST_MERCHANT_ID=your-payfast-merchant-id
PAYFAST_MERCHANT_KEY=your-payfast-merchant-key
PAYFAST_PASSPHRASE=your-payfast-passphrase
PAYFAST_SANDBOX=true
PAYFAST_SANDBOX_URL=https://sandbox.payfast.co.za/eng/process
PAYFAST_LIVE_URL=https://www.payfast.co.za/eng/process

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@escrowservice.com

# Two-Factor Authentication
TWO_FACTOR_SERVICE_NAME=Escrow Service
TWO_FACTOR_ISSUER=EscrowService

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Webhook URLs
PAYFAST_NOTIFY_URL=http://localhost:5000/api/payments/payfast/notify
PAYFAST_RETURN_URL=http://localhost:3000/payment/success
PAYFAST_CANCEL_URL=http://localhost:3000/payment/cancelled

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_TIMEOUT=3600000

# Admin Configuration
ADMIN_EMAIL=admin@escrowservice.com
ADMIN_PASSWORD=admin123456

# Monitoring
ENABLE_MONITORING=true
SENTRY_DSN=your-sentry-dsn-here
